<h1>Manage Collaborators <%= @wiki.title %></h1>

<table class="table">
  <tr>
    <th>Email</th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td>
        <% if @wiki.users.include?(user) %>
          <% collaborator = @wiki.collaborator_for(user) %>
          <%= link_to "Remove Collaborator", wiki_collaborator_path(@wiki,collaborator), method: :delete, class: "btn btn-danger" %>
        <% else %>
          <%= link_to "Add Collaborator", wiki_collaborators_path(@wiki, user_id: user.id), method: :post, class: "btn btn-success" %>
        <% end %>
      </td>
    </tr>
  <% end %>

</table>
